<h1><%= title %></h1>

<p>
  <span>

    <form id="edit_post_form" action="/admin/posts/<%= post._id %>/edit" method="post" accept-charset="utf-8">
      Title <input type="text" name="title" value="<%= post.title %>" />
      <br><br>

      Author <input type="text" name="author" value="<%= post.author %>"/>
      <br><br>

      <textarea rows="10" cols="50" name="content"><%= post.content %></textarea>
      <br><br>

      <button type="submit">Submit</button>
    </form>

  </span>
</p>
